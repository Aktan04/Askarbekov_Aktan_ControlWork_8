@model User

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2>Редактирование пользователя</h2>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit" asp-controller="Account" method="post" asp-anti-forgery="true" class="needs-validation" novalidate enctype="multipart/form-data">
            <input asp-for="Id" type="hidden" />
            <input asp-for="UserName" type="hidden"/>
            <input asp-for="Email" type="hidden"/>
            <input asp-for="PasswordHash" type="hidden"/>
            <input asp-for="Avatar" type="hidden"/>
            <div class="form-group">
                <label asp-for="NickName" class="control-label">Имя:</label>
                <input asp-for="NickName" class="form-control" />
                <span asp-validation-for="NickName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageFile">Изображение</label>
                <input asp-for="ImageFile" type="file" name="ImageFile" class="form-control">
                <span asp-validation-for="ImageFile" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Изменить</button>
        </form>
    </div>
</div>

@section Scripts{
    
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
